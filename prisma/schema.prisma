generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           String   @id
  name         String
  cpf          String
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now())

  @@map("customers")
}
